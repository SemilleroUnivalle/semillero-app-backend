# ========================================
# CONFIGURACIÓN DE VARIABLES DE ENTORNO
# ========================================
# Copia este archivo como .env y completa con tus credenciales reales

# Almacenamiento de Archivos
# False = Almacenamiento local (desarrollo)
# True = AWS S3 (producción)
USE_S3=False

# Email Configuration (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu_email@gmail.com
EMAIL_HOST_PASSWORD=tu_contraseña_de_aplicacion
DEFAULT_FROM_EMAIL=tu_email@gmail.com

# AWS S3 Configuration (solo necesario si USE_S3=True)
AWS_ACCESS_KEY_ID=tu_access_key_id_aqui
AWS_SECRET_ACCESS_KEY=tu_secret_access_key_aqui
AWS_STORAGE_BUCKET_NAME=archivos-estudiantes
AWS_S3_REGION_NAME=us-east-1
